---
import { githubIcon, externalIcon } from "./_icons";

interface Props {
  repo: string;
  label?: string;
}

const { repo, label } = Astro.props;
const displayText = label ?? repo.split("/").pop()!;
const href = `https://github.com/${repo}`;
---

<a href={href} class="ref-badge ref-gh-repo" target="_blank" rel="noopener noreferrer">
  <span class="ref-icon" set:html={githubIcon} />
  <span class="ref-label">{displayText}</span>
  <span class="ref-external" set:html={externalIcon} />
</a>
