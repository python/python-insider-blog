---
import { pythonIcon, externalIcon } from "./_icons";

interface Props {
  number: number;
  label?: string;
}

const { number, label } = Astro.props;
const displayText = label ?? `PEP ${number}`;
const href = `https://peps.python.org/pep-${String(number).padStart(4, "0")}/`;
---

<a href={href} class="ref-badge ref-pep" target="_blank" rel="noopener noreferrer">
  <span class="ref-icon" set:html={pythonIcon} />
  <span class="ref-label">{displayText}</span>
  <span class="ref-external" set:html={externalIcon} />
</a>
