---
import { packageIcon, externalIcon } from "./_icons";

interface Props {
  name: string;
  label?: string;
}

const { name, label } = Astro.props;
const displayText = label ?? name;
const href = `https://pypi.org/project/${name}/`;
---

<a href={href} class="ref-badge ref-pypi" target="_blank" rel="noopener noreferrer">
  <span class="ref-icon" set:html={packageIcon} />
  <span class="ref-label">{displayText}</span>
  <span class="ref-external" set:html={externalIcon} />
</a>
